<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ltsznh.modules.sal.dao.SalCustomerTypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.ltsznh.modules.sal.entity.SalCustomerTypeEntity" id="salCustomerTypeMap">
        <result property="customerTypeCode" column="customer_type_code"/>
        <result property="customerTypeDesc" column="customer_type_desc"/>
        <result property="isEnabled" column="is_enabled"/>
        <result property="creatorId" column="creator_id"/>
        <result property="createDate" column="create_date"/>
        <result property="modifierId" column="modifier_id"/>
        <result property="modifyDate" column="modify_date"/>
    </resultMap>

	<select id="queryObject" resultType="com.ltsznh.modules.sal.entity.SalCustomerTypeEntity">
		select * from sal_customer_type where customer_type_code = #{value}
	</select>

	<select id="queryList" resultType="com.ltsznh.modules.sal.entity.SalCustomerTypeEntity">
		select ROW_NUMBER() OVER(
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by customer_type_code desc
            </otherwise>
        </choose>
        ) AS ROW_NUM,
		*
        ,(SELECT username FROM sys_user where creator_id = user_id) as creator_name
        ,(SELECT username FROM sys_user where modifier_id = user_id) as modifier_name
		from sal_customer_type
        ORDER BY ROW_NUM
        <if test="offset != null and limit != null">
            OFFSET #{offset} ROWS
            FETCH NEXT #{limit} ROWS ONLY
        </if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sal_customer_type 
	</select>
	 
	<insert id="save" parameterType="com.ltsznh.modules.sal.entity.SalCustomerTypeEntity">
		insert into sal_customer_type
		(
			[customer_type_code], 
			[customer_type_desc], 
			[creator_id],
			[create_date]
		)
		values
		(
			#{customerTypeCode}, 
			#{customerTypeDesc}, 
			#{creatorId},
			#{createDate}
		)
	</insert>
	 
	<update id="update" parameterType="com.ltsznh.modules.sal.entity.SalCustomerTypeEntity">
		update sal_customer_type 
		<set>
			<if test="customerTypeDesc != null">[customer_type_desc] = #{customerTypeDesc}, </if>
			<if test="isEnabled != null">[is_enabled] = #{isEnabled}, </if>
			<if test="modifierId != null">[modifier_id] = #{modifierId}, </if>
			<if test="modifyDate != null">[modify_date] = #{modifyDate}</if>
		</set>
		where customer_type_code = #{customerTypeCode}
	</update>
	
	<delete id="delete">
		UPDATE sal_customer_type SET is_enabled = 0,modify_date = GETDATE(),modifier_id = #{modifierId} WHERE customer_type_code = #{value}
	</delete>
	
	<delete id="deleteBatch">
		UPDATE sal_customer_type SET is_enabled = 0,modify_date = GETDATE(),modifier_id = #{modifierId} where customer_type_code in
		<foreach item="customerTypeCode" collection="array" open="(" separator="," close=")">
			#{customerTypeCode}
		</foreach>
	</delete>

</mapper>